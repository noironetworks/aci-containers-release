      default: "cf-cluster"
   apic.infra_vlan:
      description: "Infra VLAN used by APIC"
      default: 4093
   opflex.interface:
      description: "Network interface to use for OpFlex communication"
      default: "eth1" 
   ovs.encap_interface:
      description: "OVS interface to use for reaching APIC"
