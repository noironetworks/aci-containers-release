#!/bin/bash -ex

if [ ! -f /var/vcap/jobs/cni/config/cni/cni.conf ]
then
   mkdir -p /var/vcap/jobs/cni/config/cni
   ln -s /var/vcap/jobs/aci-cf-host-agent/config/cni/cni.conf /var/vcap/jobs/cni/config/cni/cni.conf
fi

